<main style="margin-top: 70px;">
	<%- include('../partials/donorSidebar') %>

		<div id="main-wrapper">

			<div class="d-flex justify-content-between align-items-center mb-4">
				<div class="d-flex align-items-center">
					<button class="btn btn-light d-lg-none me-3" id="sidebar-toggler-btn"><i
							class="fas fa-bars"></i></button>
					<h2 class="fw-bold text-dark mb-0">Dashboard</h2>
				</div>
				<a href="/donor/donate" class="btn btn-primary"><i class="fas fa-plus me-2"></i>New Donation</a>
			</div>

			<div class="row g-4 mb-4">
				<!-- Total Donations -->
				<div class="col-md-6 col-xl-3">
					<div class="card border-0 shadow-sm h-100">
						<div class="card-body">
							<div class="d-flex align-items-center mb-3">
								<div class="bg-success bg-opacity-10 p-3 rounded-circle text-success me-3">
									<i class="fas fa-check-circle fa-2x"></i>
								</div>
								<h6 class="text-muted mb-0">Total Donated</h6>
							</div>
							<h2 class="fw-bold mb-0">
								<%= numCollectedDonations %>
							</h2>
							<small class="text-muted">Meals distributed</small>
						</div>
					</div>
				</div>

				<!-- Pending -->
				<div class="col-md-6 col-xl-3">
					<div class="card border-0 shadow-sm h-100">
						<div class="card-body">
							<div class="d-flex align-items-center mb-3">
								<div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning me-3">
									<i class="fas fa-clock fa-2x"></i>
								</div>
								<h6 class="text-muted mb-0">Pending</h6>
							</div>
							<h2 class="fw-bold mb-0">
								<%= numPendingDonations %>
							</h2>
							<small class="text-muted">Waiting for approval</small>
						</div>
					</div>
				</div>

				<!-- Accepted -->
				<div class="col-md-6 col-xl-3">
					<div class="card border-0 shadow-sm h-100">
						<div class="card-body">
							<div class="d-flex align-items-center mb-3">
								<div class="bg-info bg-opacity-10 p-3 rounded-circle text-info me-3">
									<i class="fas fa-user-check fa-2x"></i>
								</div>
								<h6 class="text-muted mb-0">Accepted</h6>
							</div>
							<h2 class="fw-bold mb-0">
								<%= numAcceptedDonations %>
							</h2>
							<small class="text-muted">To be assigned</small>
						</div>
					</div>
				</div>

				<!-- Assigned -->
				<div class="col-md-6 col-xl-3">
					<div class="card border-0 shadow-sm h-100">
						<div class="card-body">
							<div class="d-flex align-items-center mb-3">
								<div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary me-3">
									<i class="fas fa-truck fa-2x"></i>
								</div>
								<h6 class="text-muted mb-0">Assigned</h6>
							</div>
							<h2 class="fw-bold mb-0">
								<%= numAssignedDonations %>
							</h2>
							<small class="text-muted">Collection in progress</small>
						</div>
					</div>
				</div>
			</div>

			<!-- Recent Activity Section (Placeholder) -->
			<div class="card border-0 shadow-sm">
				<div class="card-header bg-white">
					<h5 class="mb-0 fw-bold">Quick Actions</h5>
				</div>
				<div class="card-body">
					<p class="text-muted">Ready to make another impact?</p>
					<a href="/donor/donate" class="btn btn-outline-primary">Donate Food Now</a>
				</div>
			</div>

		</div>
</main>