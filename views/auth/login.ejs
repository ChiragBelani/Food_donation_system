<div class="container-fluid vh-100">
    <div class="row h-100">
        <!-- Left Side: Image & Branding -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center bg-primary text-white p-5"
            style="background: linear-gradient(rgba(255, 107, 107, 0.9), rgba(255, 107, 107, 0.9)), url('/assets/images/img-1.jpg') center/cover;">
            <div class="text-center">
                <i class="fas fa-hand-holding-heart fa-5x mb-4"></i>
                <h1 class="display-4 fw-bold mb-3">Welcome Back!</h1>
                <p class="lead mb-4">"We make a living by what we get, but we make a life by what we give."</p>
                <a href="/" class="btn btn-outline-light btn-lg rounded-pill px-5">Back to Home</a>
            </div>
        </div>

        <!-- Right Side: Login Form -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center bg-white">
            <div class="w-75" style="max-width: 450px;">
                <div class="text-center mb-5 d-lg-none">
                    <a href="/" class="text-decoration-none">
                        <i class="fas fa-hand-holding-heart fa-3x text-primary"></i>
                    </a>
                </div>

                <h2 class="fw-bold mb-2 text-dark">Sign In</h2>
                <p class="text-muted mb-5">Enter your credentials to access your account.</p>

                <% if (typeof errors !=='undefined' ) { %>
                    <% errors.forEach(function(error) { %>
                        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <%= error.msg %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                    aria-label="Close"></button>
                        </div>
                        <% }); %>
                            <% } %>

                                <form action="/auth/login" method="POST">
                                    <div class="form-floating mb-3">
                                        <input type="email" name="email" class="form-control" id="email"
                                            placeholder="name@example.com" required autofocus>
                                        <label for="email">Email Address</label>
                                    </div>

                                    <div class="form-floating mb-4">
                                        <input type="password" name="password" class="form-control" id="password"
                                            placeholder="Password" required>
                                        <label for="password">Password</label>
                                    </div>

                                    <button type="submit" class="btn btn-primary w-100 btn-lg mb-4">Sign In</button>

                                    <div class="text-center">
                                        <span class="text-muted">Don't have an account?</span>
                                        <a href="/auth/signup" class="fw-bold text-primary text-decoration-none">Sign up
                                            here</a>
                                    </div>
                                </form>
            </div>
        </div>
    </div>
</div>