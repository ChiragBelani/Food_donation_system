<div class="container-fluid min-vh-100">
    <div class="row min-vh-100">
        <!-- Left Side: Image & Branding -->
        <div class="col-lg-5 d-none d-lg-flex align-items-center justify-content-center bg-secondary text-white p-5"
            style="background: linear-gradient(rgba(78, 205, 196, 0.9), rgba(78, 205, 196, 0.9)), url('/assets/images/img-2.jpg') center/cover;">
            <div class="text-center">
                <i class="fas fa-user-plus fa-5x mb-4"></i>
                <h1 class="display-4 fw-bold mb-3">Join Us</h1>
                <p class="lead mb-4">Become a part of our mission to end hunger. Whether you are a donor or a volunteer,
                    your contribution matters.</p>
                <a href="/" class="btn btn-outline-light btn-lg rounded-pill px-5">Back to Home</a>
            </div>
        </div>

        <!-- Right Side: Signup Form -->
        <div class="col-lg-7 d-flex align-items-center justify-content-center bg-white py-5">
            <div class="w-75" style="max-width: 600px;">
                <div class="text-center mb-4 d-lg-none">
                    <a href="/" class="text-decoration-none">
                        <i class="fas fa-hand-holding-heart fa-3x text-secondary"></i>
                    </a>
                </div>

                <h2 class="fw-bold mb-2 text-dark">Create Account</h2>
                <p class="text-muted mb-4">Fill in your details to get started.</p>

                <% if (typeof errors !=='undefined' ) { %>
                    <% errors.forEach(function(error) { %>
                        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <%= error.msg %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                    aria-label="Close"></button>
                        </div>
                        <% }); %>
                            <% } %>

                                <form id="signup-form" action="/auth/signup" method="POST">
                                    <div class="row g-3 mb-3">
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input type="text" name="firstName" class="form-control" id="first-name"
                                                    placeholder="First" required>
                                                <label for="first-name">First Name</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input type="text" name="lastName" class="form-control" id="last-name"
                                                    placeholder="Last" required>
                                                <label for="last-name">Last Name</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="input-group">
                                            <div class="form-floating flex-grow-1">
                                                <input type="email" name="email" class="form-control" id="email"
                                                    placeholder="name@example.com" required>
                                                <label for="email">Email Address</label>
                                            </div>
                                            <button type="button" id="get-otp" class="btn btn-secondary px-4">Get
                                                OTP</button>
                                        </div>
                                        <div class="form-text">We'll send a verification code to this email.</div>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input type="number" name="otp" class="form-control" id="otp"
                                            placeholder="Enter OTP" required disabled>
                                        <label for="otp">Enter OTP Code</label>
                                    </div>

                                    <div class="row g-3 mb-3">
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input type="password" name="password1" class="form-control"
                                                    id="password1" placeholder="Password" required disabled>
                                                <label for="password1">Password</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input type="password" name="password2" class="form-control"
                                                    id="password2" placeholder="Confirm" required disabled>
                                                <label for="password2">Confirm Password</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-floating mb-4">
                                        <select class="form-select" name="role" id="role" disabled>
                                            <option value="donor">Donor - I want to donate food</option>
                                            <option value="agent">Agent - I want to collect/distribute</option>
                                            <option value="admin">Admin</option>
                                        </select>
                                        <label for="role">I want to join as</label>
                                    </div>

                                    <button type="submit" id="signup-btn" class="btn btn-primary w-100 btn-lg mb-4"
                                        disabled>Create Account</button>

                                    <div class="text-center">
                                        <span class="text-muted">Already have an account?</span>
                                        <a href="/auth/login" class="fw-bold text-secondary text-decoration-none">Login
                                            here</a>
                                    </div>
                                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const getOtpBtn = document.getElementById('get-otp');
    const otpInput = document.getElementById('otp');
    const password1Input = document.getElementById('password1');
    const password2Input = document.getElementById('password2');
    const roleInput = document.getElementById('role');
    const signupBtn = document.getElementById('signup-btn');

    getOtpBtn.addEventListener('click', async () => {
        const email = document.getElementById('email').value;
        if (!email) return alert("Please enter your email first.");

        getOtpBtn.disabled = true;
        getOtpBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Sending...';

        try {
            const res = await fetch('/auth/send-otp', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email })
            });
            const data = await res.json();

            if (!data.success) {
                alert(data.message || "Failed to send OTP");
                getOtpBtn.disabled = false;
                getOtpBtn.textContent = "Get OTP";
                return;
            }

            alert("✅ OTP sent to your email. Valid for 5 minutes.");
            otpInput.disabled = false;
            otpInput.focus();

            setTimeout(() => {
                getOtpBtn.disabled = false;
                getOtpBtn.textContent = "Get OTP";
            }, 60000);

        } catch (err) {
            console.error(err);
            alert("❌ Error sending OTP. Try again.");
            getOtpBtn.disabled = false;
            getOtpBtn.textContent = "Get OTP";
        }
    });

    otpInput.addEventListener('input', async () => {
        const otp = otpInput.value;
        const email = document.getElementById('email').value;

        if (otp.length !== 6) {
            otpInput.classList.remove('is-valid', 'is-invalid');
            signupBtn.disabled = true;
            return;
        }

        try {
            const res = await fetch('/auth/verify-otp', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email, otp })
            });
            const data = await res.json();

            if (data.success) {
                otpInput.classList.add('is-valid');
                otpInput.classList.remove('is-invalid');
                password1Input.disabled = false;
                password2Input.disabled = false;
                roleInput.disabled = false;
                signupBtn.disabled = false;
            } else {
                otpInput.classList.add('is-invalid');
                otpInput.classList.remove('is-valid');
                password1Input.disabled = true;
                password2Input.disabled = true;
                roleInput.disabled = true;
                signupBtn.disabled = true;
            }
        } catch (err) {
            console.error(err);
            alert("❌ Error verifying OTP");
        }
    });
</script>