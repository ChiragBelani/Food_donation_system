<main style="margin-top: 70px;">
	<%- include('../partials/adminSidebar') %>

		<div id="main-wrapper">
			<div class="d-flex align-items-center mb-4">
				<button class="btn btn-light d-lg-none me-3" id="sidebar-toggler-btn"><i
						class="fas fa-bars"></i></button>
				<h2 class="fw-bold text-dark mb-0">Assign Agent</h2>
			</div>

			<div class="card border-0 shadow-sm">
				<div class="card-header bg-white border-bottom py-3">
					<h5 class="mb-0 fw-bold text-primary">Donation #<%= donation._id.toString().slice(-6).toUpperCase()
							%>
					</h5>
				</div>
				<div class="card-body p-4">
					<form action="/admin/donation/assign/<%= donation._id %>" method="POST">
						<div class="row g-4 mb-4">
							<div class="col-md-6">
								<label class="form-label text-muted">Donor Name</label>
								<div class="form-control bg-light">
									<%= donation.donor.firstName + ' ' + donation.donor.lastName %>
								</div>
							</div>
							<div class="col-md-6">
								<label class="form-label text-muted">Pickup Address</label>
								<div class="form-control bg-light">
									<%= donation.address %>
								</div>
							</div>
						</div>

						<div class="mb-4">
							<label for="agent" class="form-label fw-bold">Select Agent</label>
							<select name="agent" class="form-select form-select-lg" id="agent" required>
								<option value="" selected disabled>Choose an agent...</option>
								<% for(let i=0; i<agents.length; i++) { %>
									<option value="<%= agents[i]._id %>">
										<%= agents[i].firstName + " " + agents[i].lastName %> (<%= agents[i].email %>)
									</option>
									<% } %>
							</select>
						</div>

						<div class="mb-4">
							<label for="msg" class="form-label fw-bold">Message to Agent (Optional)</label>
							<textarea name="adminToAgentMsg" class="form-control" id="msg" rows="3"
								placeholder="Specific instructions for the agent..."></textarea>
						</div>

						<div class="d-flex justify-content-end gap-2">
							<a href="/admin/donation/view/<%= donation._id %>"
								class="btn btn-outline-secondary px-4">Cancel</a>
							<button type="submit" class="btn btn-primary px-5">Assign Agent</button>
						</div>
					</form>
				</div>
			</div>
		</div>
</main>