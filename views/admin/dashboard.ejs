<main style="margin-top: 70px;">
	<%- include('../partials/adminSidebar') %>

		<div id="main-wrapper">
			<div class="d-flex align-items-center mb-4">
				<button class="btn btn-light d-lg-none me-3" id="sidebar-toggler-btn"><i
						class="fas fa-bars"></i></button>
				<h2 class="fw-bold text-dark mb-0">Admin Dashboard</h2>
			</div>

			<div class="row g-4 mb-4">
				<!-- Users Stats -->
				<div class="col-12">
					<h5 class="text-muted mb-3">User Statistics</h5>
				</div>

				<div class="col-md-4">
					<div class="card border-0 shadow-sm h-100">
						<div class="card-body d-flex align-items-center">
							<div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary me-3">
								<i class="fas fa-user-shield fa-2x"></i>
							</div>
							<div>
								<h6 class="text-muted mb-0">Admins</h6>
								<h2 class="fw-bold mb-0">
									<%= numAdmins %>
								</h2>
							</div>
						</div>
					</div>
				</div>

				<div class="col-md-4">
					<div class="card border-0 shadow-sm h-100">
						<div class="card-body d-flex align-items-center">
							<div class="bg-success bg-opacity-10 p-3 rounded-circle text-success me-3">
								<i class="fas fa-hand-holding-heart fa-2x"></i>
							</div>
							<div>
								<h6 class="text-muted mb-0">Donors</h6>
								<h2 class="fw-bold mb-0">
									<%= numDonors %>
								</h2>
							</div>
						</div>
					</div>
				</div>

				<div class="col-md-4">
					<div class="card border-0 shadow-sm h-100">
						<div class="card-body d-flex align-items-center">
							<div class="bg-info bg-opacity-10 p-3 rounded-circle text-info me-3">
								<i class="fas fa-truck fa-2x"></i>
							</div>
							<div>
								<h6 class="text-muted mb-0">Agents</h6>
								<h2 class="fw-bold mb-0">
									<%= numAgents %>
								</h2>
							</div>
						</div>
					</div>
				</div>

				<!-- Donation Stats -->
				<div class="col-12 mt-4">
					<h5 class="text-muted mb-3">Donation Overview</h5>
				</div>

				<div class="col-md-3">
					<div class="card border-0 shadow-sm h-100 border-start border-4 border-warning">
						<div class="card-body">
							<div class="d-flex justify-content-between align-items-start mb-2">
								<h6 class="text-muted mb-0">New Requests</h6>
								<i class="fas fa-bell text-warning"></i>
							</div>
							<h2 class="fw-bold mb-0">
								<%= numPendingDonations %>
							</h2>
							<small class="text-muted">Action needed</small>
						</div>
					</div>
				</div>

				<div class="col-md-3">
					<div class="card border-0 shadow-sm h-100 border-start border-4 border-info">
						<div class="card-body">
							<div class="d-flex justify-content-between align-items-start mb-2">
								<h6 class="text-muted mb-0">To Assign</h6>
								<i class="fas fa-user-plus text-info"></i>
							</div>
							<h2 class="fw-bold mb-0">
								<%= numAcceptedDonations %>
							</h2>
							<small class="text-muted">Accepted, need agent</small>
						</div>
					</div>
				</div>

				<div class="col-md-3">
					<div class="card border-0 shadow-sm h-100 border-start border-4 border-primary">
						<div class="card-body">
							<div class="d-flex justify-content-between align-items-start mb-2">
								<h6 class="text-muted mb-0">In Progress</h6>
								<i class="fas fa-spinner text-primary"></i>
							</div>
							<h2 class="fw-bold mb-0">
								<%= numAssignedDonations %>
							</h2>
							<small class="text-muted">Collection pending</small>
						</div>
					</div>
				</div>

				<div class="col-md-3">
					<div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
						<div class="card-body">
							<div class="d-flex justify-content-between align-items-start mb-2">
								<h6 class="text-muted mb-0">Completed</h6>
								<i class="fas fa-check-circle text-success"></i>
							</div>
							<h2 class="fw-bold mb-0">
								<%= numCollectedDonations %>
							</h2>
							<small class="text-muted">Successfully distributed</small>
						</div>
					</div>
				</div>
			</div>
		</div>
</main>