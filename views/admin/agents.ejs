<main style="margin-top: 70px;">
	<%- include('../partials/adminSidebar') %>

		<div id="main-wrapper">
			<div class="d-flex align-items-center mb-4">
				<button class="btn btn-light d-lg-none me-3" id="sidebar-toggler-btn"><i
						class="fas fa-bars"></i></button>
				<h2 class="fw-bold text-dark mb-0">Registered Agents</h2>
			</div>

			<div class="card border-0 shadow-sm">
				<div class="card-body p-0">
					<div class="table-responsive">
						<table class="table table-hover align-middle mb-0">
							<thead class="bg-light">
								<tr>
									<th scope="col" class="ps-4">#</th>
									<th scope="col">Agent Name</th>
									<th scope="col">Email</th>
									<th scope="col">Phone</th>
									<th scope="col">Joined Date</th>
								</tr>
							</thead>
							<tbody>
								<% if(agents.length===0) { %>
									<tr>
										<td colspan="5" class="text-center py-4 text-muted">No agents found.</td>
									</tr>
									<% } %>
										<% for(let i=0; i<agents.length; i++) { %>
											<tr>
												<td class="ps-4 fw-bold text-muted">
													<%= i+1 %>
												</td>
												<td>
													<div class="d-flex align-items-center">
														<div class="user-icon-sm bg-dark text-white rounded-circle me-2 d-flex align-items-center justify-content-center"
															style="width: 30px; height: 30px; font-size: 0.9rem;">
															<%= agents[i].firstName[0] %>
														</div>
														<%= agents[i].firstName + " " + agents[i].lastName %>
													</div>
												</td>
												<td>
													<%= agents[i].email %>
												</td>
												<td>
													<%= agents[i].phone %>
												</td>
												<td class="text-muted">
													<%= agents[i].joinedTime.toLocaleString("en-IN", {
														dateStyle: "medium" , timeStyle: "short" }) %>
												</td>
											</tr>
											<% } %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
</main>