<main style="margin-top: 70px;">
	<%- include('../partials/agentSidebar') %>

		<div id="main-wrapper">
			<div class="d-flex align-items-center mb-4">
				<button class="btn btn-light d-lg-none me-3" id="sidebar-toggler-btn"><i
						class="fas fa-bars"></i></button>
				<h2 class="fw-bold text-dark mb-0">Agent Dashboard</h2>
			</div>

			<div class="row g-4 mb-4">
				<!-- Pending Collections -->
				<div class="col-md-6">
					<div class="card border-0 shadow-sm h-100">
						<div class="card-body">
							<div class="d-flex align-items-center mb-3">
								<div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary me-3">
									<i class="fas fa-truck-loading fa-2x"></i>
								</div>
								<h6 class="text-muted mb-0">Pending Collections</h6>
							</div>
							<h2 class="fw-bold mb-0">
								<%= numAssignedDonations %>
							</h2>
							<small class="text-muted">Donations assigned to you</small>
							<div class="mt-3">
								<a href="/agent/collections/pending" class="btn btn-sm btn-outline-primary">View
									Pending</a>
							</div>
						</div>
					</div>
				</div>

				<!-- Total Collected -->
				<div class="col-md-6">
					<div class="card border-0 shadow-sm h-100">
						<div class="card-body">
							<div class="d-flex align-items-center mb-3">
								<div class="bg-success bg-opacity-10 p-3 rounded-circle text-success me-3">
									<i class="fas fa-check-double fa-2x"></i>
								</div>
								<h6 class="text-muted mb-0">Total Collected</h6>
							</div>
							<h2 class="fw-bold mb-0">
								<%= numCollectedDonations %>
							</h2>
							<small class="text-muted">Successfully distributed</small>
							<div class="mt-3">
								<a href="/agent/collections/previous" class="btn btn-sm btn-outline-success">View
									History</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
</main>